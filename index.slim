    title simia.tech

  body class="${page_classes}"
    .row.screen.shadow
      .small-12.columns
        .row.header
          .large-10.columns.sitename
            a href="/" alt="simia.tech"
              img src="/image/simia_logo.jpg"
          .large-2.columns
            #locale_switcher
              a.en.current href="/" en
              '  |
              a.de.current href="/" de

        .row.sticky.navigation
          .small-12.columns
            ul.right
              - %w{Home About Team Projects Contact Imprint}.each do |page|
                li.active id="#{page.downcase}-link"
                  a href="#{page == 'Home' ? '/' : "/#{page.downcase}"}"
                    = page

        .row
          .small-12.large-12.columns.content ng-view=""

    - Dir[ File.join(File.dirname(__FILE__), 'pages', '*.slim') ].each do |filename|
      - id = File.basename filename, '.slim'
      script id="#{id}" type="text/x-angular-template"
        == partial filename

